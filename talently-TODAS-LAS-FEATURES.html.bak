            setupSwipeGestures() {
                let startX = 0;
                let currentX = 0;
                let isDragging = false;

                const handleStart = (clientX) => {
                    const card = document.getElementById('currentCard');
                    if (!card) return;
                    isDragging = true;
                    startX = clientX;
                    card.style.transition = 'none';
                };

                const handleMove = (clientX) => {
                    if (!isDragging) return;
                    const card = document.getElementById('currentCard');
                    if (!card) return;
                    
                    currentX = clientX - startX;
                    const rotation = currentX / 20;
                    card.style.transform = `translateX(${currentX}px) rotate(${rotation}deg)`;
                };

                const handleEnd = () => {
                    if (!isDragging) return;
                    const card = document.getElementById('currentCard');
                    if (!card) return;
                    
                    isDragging = false;
                    
                    if (Math.abs(currentX) > 100) {
                        this.animateSwipe(currentX > 0 ? 'right' : 'left');
                    } else {
                        card.style.transition = 'transform 0.3s ease';
                        card.style.transform = '';
                    }
                    currentX = 0;
                };

                document.addEventListener('mousedown', (e) => {
                    const card = document.getElementById('currentCard');
                    if (card && card.contains(e.target)) handleStart(e.clientX);
                });
                document.addEventListener('mousemove', (e) => handleMove(e.clientX));
                document.addEventListener('mouseup', handleEnd);

                document.addEventListener('touchstart', (e) => {
                    const card = document.getElementById('currentCard');
                    if (card && card.contains(e.target)) handleStart(e.touches[0].clientX);
                });
                document.addEventListener('touchmove', (e) => handleMove(e.touches[0].clientX));
                document.addEventListener('touchend', handleEnd);
            },

            animateSwipe(direction) {
                const card = document.getElementById('currentCard');
                if (!card) return;
                
                const distance = direction === 'right' ? 1000 : -1000;
                const rotation = direction === 'right' ? 30 : -30;
                
                card.classList.add('animating');
                card.style.transform = `translateX(${distance}px) rotate(${rotation}deg)`;
                card.style.opacity = '0';
                
                setTimeout(() => {
                    this.currentIndex++;
                    this.renderCard();
                }, 500);
            },

            swipeLeft() {
                this.animateSwipe('left');
            },

            swipeRight() {
                this.animateSwipe('right');
